        <twig:BasePicture
            small="{{ gallery.first.small }}"
            medium="{{ gallery.first.medium }}"
            large="{{ gallery.first.large }}"
            class="object-cover rounded-lg w-full h-full sm:h-[174px] md:h-[280px]"
        />
