    <li class="col-start-1 row-start-2">
        <twig:BasePicture
            small="{{ gallery.second.small }}"
            medium="{{ gallery.second.medium }}"
            large="{{ gallery.second.large }}"
            class="object-cover rounded-lg w-full h-full sm:h-[174px] md:h-[280px]"
        />
    </li>
    <li class="col-start-2 row-span-2 col-span-1">
        <twig:BasePicture
            small="{{ gallery.third.small }}"
            medium="{{ gallery.third.medium }}"
            large="{{ gallery.third.large }}"
            class="object-cover rounded-lg w-full sm:h-[368px] md:h-[592px]"
        />
    </li>
