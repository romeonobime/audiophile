{% props
    color = '',
%}

{% set baseCard = cva({
    base: 'rounded-lg',
    variants: {
        color: {
            lightest: 'bg-neutral-lightest',
            light: 'bg-neutral-light',
            primary: 'bg-primary',
            darkest: 'bg-neutral-darkest'
        },
    }
}) %}


<article class="{{ baseCard.apply({color}, attributes.render('class')) | tailwind_merge }}">
    {% block content %}{% endblock %}
</article>
