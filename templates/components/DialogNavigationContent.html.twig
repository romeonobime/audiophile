<dialog data-dialog-target="dialog">
    <twig:BaseHeaderMenu>
        <twig:block name="cart">
            <twig:DialogCartTrigger action="click->dialog#close" />
        </twig:block>
        <twig:block name="navigation">
            <twig:DialogNavigationTrigger action="click->dialog#close" />
        </twig:block>
    </twig:BaseHeaderMenu>
    <twig:BaseCard color="lightest" class="rounded-t-none py-10">
        <twig:BaseNavigationCategory />
    </twig:BaseCard>
</dialog>
